<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class = "table table-hover">
  <!--<thead>-->
  <!--  <tr>-->
  <!--    <th>Title</th>-->
  <!--    <th>Body</th>-->
      <!--<th>Category</th>-->
  <!--    <th>User</th>-->
  <!--    <th colspan="3"></th>-->
  <!--  </tr>-->
  <!--</thead>-->

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class='glyphicon glyphicon-star-empty favorite'>
        </td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <!--<td><%= post.category_id %></td>-->
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-info navbar-btn'  %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-info navbar-btn'  %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-info navbar-btn'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<script>
  $(".favorite").click(handleFavoriteClicked);
  function handleFavoriteClicked (){
    $(this).removeClass("glyphicon-star-empty");
    $(this).addClass("glyphicon-star");
    
  }
</script>